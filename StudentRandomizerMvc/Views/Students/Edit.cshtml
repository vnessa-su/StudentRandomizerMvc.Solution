@{
  Layout = "_Layout";
}

@model StudentRandomizerMvc.Models.Student

<h2>Edit</h2>

<h4>Edit: @Html.DisplayFor(model => model.Name)</h4>


<h1>Edit Info:</h1>
<form action="/Students/Details/@(Model.StudentId)" method="post">
  <label for="name">Student's Name</label>
  <input id="name" name="name" type="text" value="@(Model.Name)">
  <button type="submit">Go!</button>
</form>

<p> @Html.ActionLink("Back to Student List", "Index") </p>