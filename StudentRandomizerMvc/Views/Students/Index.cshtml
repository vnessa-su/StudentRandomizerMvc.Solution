@{
  Layout = "_Layout";
}

@model List<StudentRandomizerMvc.Models.Student>

<h1>Student Roster</h1>

<ul>
  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.Name} ({student.StudentId})", "Details", new { id = student.StudentId })</li>
  }
</ul>
<p>@Html.ActionLink("Generate Optimal Groups", "DisplayGenerated", "Groups")</p>
<p>@Html.ActionLink("Click Here to Add Students", "AddStudents", "Students")</p>
